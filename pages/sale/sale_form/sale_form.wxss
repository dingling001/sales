/* pages/sale/sale_form/sale_form.wxss */

.form_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1px solid #f9f9fa;
}

.form_input {
  text-align: right;
  flex: 1;
  position: relative;
}

.form_input input {
  padding: 27rpx 0;
  width: 100%;
  height: auto;
}

.form_input .placle {
  color: #999;
  font-size: 26rpx;
}
.picker{
  padding: 27rpx 25rpx;
}
.form_input picker {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  z-index: 2;
  font-size: 26rpx;
  text-align: right;
  color: #999;
  padding: 0 27rpx 0 0;

}

.form_input .iconfont {
  color: #e4e4e4;
  font-size: 26rpx;
}
