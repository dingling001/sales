/* pages/classify/classify.wxss */

.index_top {
  background: linear-gradient(0deg, rgba(243, 216, 97, 1), rgba(253, 206, 2, 1));
  height: 257rpx;
}

.class_list {
  margin: -233rpx auto 0 auto;
  width: 93%;
}

.class_item {
  margin: 0 0 32rpx 0;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  /* box-shadow: -1px 3px 54px 5px rgba(192, 192, 192, 0.3); */
}

.class_item image {
  width: 100%;
  height: 300rpx;
}

.class_name {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 26rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  color: #fff;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.23);
}

.class_title {
  font-weight: bold;
  font-size: 35rpx;
}
