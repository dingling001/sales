/* pages/my/my.wxss */

.my_top {
  display: flex;
  align-content: center;
  justify-items: center;
  position: relative;
}

.my_top image {
  width: 100%;
}

.my_info {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.headimg {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 21rpx 0;
}

.headimg image {
  width: 100%;
}

.my_info button {
  background: #fff;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
