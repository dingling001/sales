/* pages/my/my.wxss */

.my_top {
  display: flex;
  align-content: center;
  justify-items: center;
  position: relative;
}

.my_top image {
  width: 100%;
}

.my_info {
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  align-items: center;
  flex-direction: column;
  /* justify-content: center; */
}

.headimg {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 21rpx 0;
}

.headimg image {
  height: 100rpx;
  width: 100rpx;
}

.my_info button {
  background: #fff;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.my_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  margin: 0 0 2rpx 0;
  font-size: 28rpx;
  color: #000;
  padding: 30rpx;
}

.my_item:active {
  background-color: #f5f5f5;
}

.icon_box {
  display: flex;
  align-items: center;
}

.my_item image {
  height: 35rpx;
  width: 35rpx;
  margin-right: 12rpx;
}
.icon-tiaozhuan{
  color: #ccc;
  font-weight: bold
}