<!--pages/index/detail/detail.wxml-->
<view class='g_too'>
  <swiper class='index_swiper' indicator-dots="true" indicator-color='#fff' indicator-active-color='#FDCE02'>
    <block wx:for="{{imgUrls}}" wx:key='item'>
      <swiper-item class='swiper_item'>
        <image src="{{item}}" mode="widthFix" />
      </swiper-item>
    </block>
  </swiper>
  <view class='d_preprice'>
    <text>￥</text>{{goodsInfo.goodsPrice}}</view>
  <view class='d_oldprice'>
    <text>￥</text>{{goodsInfo.goodsCost}}</view>
  <view class='g_name'>{{goodsInfo.goodsName}}</view>
  <view class='g_des'>{{goodsInfo.goodsDesc}}</view>
</view>
<view class='detial_box'>
  <view class='rec'>商品详情
    <view class='rec_text'></view>
  </view>
  <view class='content_box'>
    <view class='content_item'>
      <view class='detial_content'>{{goodsInfo.goodsText}}</view>
      <view class='detial_img'>
        <image mode='widthFix' src='{{goodsInfo.goodsDetail}}'></image>
      </view>
    </view>
  </view>
  <view class='rec'>购买链接
    <view class='rec_text'></view>
  </view>
  <view class='code_box' bindtap='copy_code' data-code='{{goodsInfo.goodsCode}}'>
    <view class='code_des'>{{goodsInfo.goodsCode}}</view>
    <view class='code_btn'>复制这段淘口令</view>
  </view>
</view>