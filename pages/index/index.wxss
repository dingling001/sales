/**index.wxss**/

page {
  background-color: #f9f9fa;
}

.index_top {
  background: linear-gradient(0deg, rgba(243, 216, 97, 1), rgba(253, 206, 2, 1));
  height: 257rpx;
}

.index_swiper {
  margin: -30% auto 0 auto;
  height: 300rpx;
  width: 93%;
  position: relative;
  overflow: hidden;
}

.swiper_item {
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.1);
}

.swiper_item image {
  width: 100%;
  /* height: 100% */
}

.nodata {
  color: #f5f5f5;
  font-size: 26rpx;
}

.icon-huidaodingbu {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  z-index: 10;
  font-size: 80rpx;
  color: #ccc;
}

.index_boxs {
  padding: 51rpx 0 0 24rpx;
}

