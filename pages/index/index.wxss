/**index.wxss**/

page {
  background-color: #f9f9fa;
}

.index_top {
  background: linear-gradient(0deg, rgba(243, 216, 97, 1), rgba(253, 206, 2, 1));
  height: 257rpx;
}

.index_swiper {
  margin: -30% auto 0 auto;
  /* height: 300rpx; */
  width: 93%;
  position: relative;
  overflow: hidden;
}

.swiper_item {
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper_item image {
  width: 100%;
  /* height: 100% */
}

.index_box {
  padding: 51rpx 24rpx;
}

.index_rec {
  margin: 0 0 31rpx 0;
  font-size: 30rpx;
  color: #222;
  position: relative;
}

.index_rec .rec_text {
  position: absolute;
  left: 0;
  bottom: 5rpx;
  width: 57rpx;
  height: 22rpx;
  z-index: -1;
  background: rgba(244, 214, 84, 0.65);
}

.index_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 24rpx;
}

.index_item {
  width: 46%;
  margin: 0 0 31rpx 0;
}

.index_item_img {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 5px;
  height: 341rpx;
  margin: 0 0 31rpx 0;
  overflow: hidden;
}

.index_item image {
  width: 100%;
}

.index_name {
  color: #222;
  font-size: 28rpx;
}

.index_des {
  color: #666;
  font-size: 24rpx;
  margin: 19rpx 0;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.pre_p {
  font-size: 26rpx;
  color: #f80f0f;
}

.old_p {
  font-size: 26rpx;
  color: #999;
  margin: 0 0 0 21rpx;
  text-decoration: line-through;
}
